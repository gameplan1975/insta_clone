<div class="body-content">
    <h3>投稿一覧(index)</h3>
    <%= link_to '投稿する', new_blog_path %>
    <% @blogs.each do |blog| %>
        <div class="body-frame">
            <% if blog.blog_image? %>
                <p><%= image_tag blog.blog_image.url %></P>
            <% end %>
            <%= blog.content %>
            <p style="color:#9f9f9f; text-align:right"><%= blog.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
            <div style="text-align:right">
                <%= link_to '詳細', blog %>
                <%= link_to '編集', edit_blog_path(blog) %>
                <%= link_to '削除', blog, method: :delete, data: { confirm: '削除しますか？' } %>
            </div>
        </div>
    <% end %>
</div>